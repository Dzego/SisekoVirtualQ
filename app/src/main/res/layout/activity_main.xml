<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8"
            android:background="@color/black">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:textColor="@color/white"
                android:theme="?attr/actionBarTheme" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt"
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Home "
        android:textColor="@color/white"
        android:textSize="34dp"
        android:textStyle="bold"

        />

    <Spinner
        android:id="@+id/company_spinner"
        android:layout_width="160dp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="210dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:scrollbarSize="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_height="50dp" />


    <TextView
        android:id="@+id/txt_company"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/txt"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        android:text="Select company" />

    <Spinner
        android:id="@+id/company_codeSp"
        android:layout_width="160dp"
        android:layout_marginTop="160dp"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="210dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:scrollbarSize="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_height="50dp" />


    <TextView
        android:id="@+id/txt_code"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/txt_company"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:text="Select Code of company" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_company"
        android:id="@+id/divid"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:layout_marginTop="90dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:layout_margin="5dp"
            android:id="@+id/Devide_txt2"/>

        <Button
            android:id="@+id/viewAddress_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/Devide_txt2"
            android:background="@drawable/btn_shape"
            android:onClick="openCompany"
            android:text="company Q"
            android:textSize="10sp" />

        <Button
            android:id="@+id/companyQ_btn"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/Devide_txt2"
            android:background="@drawable/btn_shape"
            android:text="view company details"
            android:textSize="10sp" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="1600dp"
        android:layout_marginTop="340dp"
        app:srcCompat="@drawable/image" />

</RelativeLayout>




